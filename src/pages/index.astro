        let tipoSeleccionado = tipoSaludo.value;

        let mensajesTipo = mensajes[tipoSeleccionado];
        let mensajeAleatorio =
            mensajesTipo[Math.floor(Math.random() * mensajesTipo.length)];
        saludo.textContent = mensajeAleatorio;
    }

    const copySaludo = () => {
        navigator.clipboard.writeText(saludo.textContent);
        copiar.innerText = "Saludo Copiado";
        copiar.style.background = "#fff";
        copiar.style.color = "#000123";
